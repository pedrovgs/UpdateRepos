name:                update-repos
version:             0.0.1
synopsis:            Update all your git repositories with just one command.
description:         Please see README.md
homepage:            https://github.com/pedrovgs/update-repos
license:             Apache-2.0
license-file:        LICENSE
author:              Pedro Vicente G칩mez S치nchez
maintainer:          pedrovicente.gomez@gmail.com
copyright:           2017 Pedro Vicente G칩mez S치nchez
category:            Command line tool
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     UpdateRepos
                     , Git
                     , SystemFree
                     , System
  build-depends:       base >= 4.7 && < 5
                     , directory
                     , bytestring
                     , text
                     , filepath
                     , process
                     , split
                     , monad-parallel
                     , free
  default-language:    Haskell2010

executable update-repos
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , update-repos
                     , directory
                     , filepath
                     , split
                     , monad-parallel
                     , optparse-generic
  default-language:    Haskell2010

test-suite update-repos-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , update-repos
                     , hspec
                     , QuickCheck
                     , free
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/pedrovgs/update-repos
